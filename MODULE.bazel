)

bazel_dep(name = "phst_bazelcov", dev_dependency = True)
archive_override(
    module_name = "phst_bazelcov",
    integrity = "sha384-9W8IIOl1LVX9JbpK6MY4Uu2mf62i+hrmghW4hmCtLO8ABYqPTcQf8Oo0t4VUnznK",
