)

bazel_dep(name = "phst_merge_bazel_lockfiles", dev_dependency = True)
archive_override(
    module_name = "phst_merge_bazel_lockfiles",
    integrity = "sha384-gFuWEcT8E1bI6t3DVCcdr3wPUQ2IZOY9ND472JvDb55pZhLKJd9j6bvjDubP7svW",
